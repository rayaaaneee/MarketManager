{% block stylesheet %}
<style>
  .title-menu-container {
    display: flex;
    align-items: center;
  }

  .title-menu-container img {
    margin-right: 10px;
    width: 25px;
    height: fit-content;
  }
  .name-menu-container {
    display: flex;
    align-items: center;
    margin-right: 10px;
    color: white;
    margin-top:14px;
  }
  main {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 70px;
    justify-content: center;
  }
  .title-menu-container { margin-left: 20px; }

  .navbar-brand {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
  }

  .navbar-brand * {
    width: 100%;
    margin: 0;
    padding: 0;
  }
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <div class="title-menu-container">
        <a class="navbar-brand" href="{{ path('home') }}">
          <img src="{{ asset('img/icon.png') }}" alt="logo" draggable="false">
          <p>Market Manager<p>
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('list') }}">Lists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('article') }}">Articles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('new_list') }}">New list</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./">Stats</a>
          </li>
        </ul>
        {% if app.session.get('id') %}
          <p class="name-menu-container">Hello {{ app.session.get('Surname') }}</p>
          <a href="{{ path('disconnect') }}" type="button" class="btn btn-primary">Disconnect</a>
        {% else %}
          <a href="{{ path('connect') }}" type="button" class="btn btn-primary">Connect</a>
          <a href="{{ path('register') }}"type="button" class="btn btn-primary">Sign Up</a>
        {% endif %}
      </div>
    </div>
</nav>
{% endblock %}