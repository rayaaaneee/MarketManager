{% block stylesheet %}

{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <div class="title-menu-container">
        <a class="navbar-brand" href="{{ path('home') }}">
          <img src="{{ asset('img/icon.png') }}" alt="logo" draggable="false">
          <p>Market Manager<p>
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('list') }}">Lists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('article') }}">Articles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('new_list') }}">New list</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('stat')}}">Stats</a>
          </li>
        </ul>
        {% if app.session.get('id') %}
          <div class="nav-text-right">
            <div class="hello-text-image-container">
              <img class="hello-image" src="{{ asset('img/hello.png') }}" alt="hello" draggable="false" width="25" height="25">
              <p class="name-menu-container">Hello {{ app.session.get('Surname') }}</p>
            </div>
            <a href="{{ path('disconnect') }}" type="button" class="btn btn-primary">Disconnect</a>
          </div>
        {% else %}
          <a href="{{ path('connect') }}" type="button" class="btn btn-primary">Connect</a>
          <a href="{{ path('register') }}"type="button" class="btn btn-primary">Sign Up</a>
        {% endif %}
      </div>
    </div>
</nav>
{% endblock %}