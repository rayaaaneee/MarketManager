{% set class = class|default('') %}
{% set totalPages = pagination.paginationData['pageCount'] %}
{% set currentPage = pagination.paginationData['current'] %}
<div class="pagination-bar-container {{ class }} {% if pagination.totalItemCount == 0 %}hidden{% endif %}">
	<ul class="pagination pagination-lg">
		<li class="page-item">
			<a class="page-link" href="./?p={{ pagination.currentPageNumber - 1 }}">&laquo;</a>
		</li>
		{% for i in 1..totalPages %}
			<li class="page-item {% if loop.index == pagination.currentPageNumber %}active{% endif %}">
				<a class="page-link" href="./?p={{ loop.index }}">{{ loop.index }}</a>
			</li>
		{% endfor %}
		<li class="page-item">
			<a class="page-link" href="./?p={{ pagination.currentPageNumber + 1 }}">&raquo;</a>
		</li>
	</ul>
</div>
