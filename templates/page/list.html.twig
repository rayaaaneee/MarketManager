{% extends 'base.html.twig' %}

{%block title%}My lists ({{ nbLists }}){%endblock%}

{%block stylesheet%}

{%endblock%}

{%block body%}
{% if nbLists == 0 %}
    <h1>You don't have any lists yet</h1>
{% else %}
    <h1>My lists ({{ nbLists }})</h1>
    {% set i = 0 %}
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">List Name</th>
            <th scope="col">Column heading</th>
            <th scope="col">Column heading</th>
            <th scope="col">Column heading</th>
          </tr>
        </thead>
        <tbody>
    {% for list in lists %}
        {% set i = i + 1 %}
              <tr class="table-{{ table_tr_classes[i] }}">
                <th scope="row">{{ list.name }}</th>
                <td></td>
                <td>Column content</td>
                <td>Column content</td>
              </tr>
              {% endfor %}
            </tbody>
        </table>
{% endif %}

{{ include ('footer.html.twig') }}
{%endblock body%}