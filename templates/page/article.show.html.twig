

{% extends 'base.html.twig' %}

{% block title %}{{ article.Name }} - Article{% endblock %}

{% block body %}

{% block stylesheet %}
<style>
  .container {
    display: flex;
    align-items: center;
    margin-top : 10px;
    margin-top: 30px;
    column-gap: 50px;
  }
  .container img {
    width: 150px;
    height: 150px;
    margin-right: 20px;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    row-gap: 15px;
  }

  .required::after {
    content: "*";
    color: red;
    margin-left: 5px;
  }

  .text-container > * {
    text-align: center;
  }

  .form-container {
    width: 100%;
    height: fit-content;
  }

  .form-inline, .form-inline > * {
    display: flex;
    flex-direction: column;
    row-gap: 15px;
  }

  button[type="submit"] {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-top: 15px;
  }

  button[type="submit"]:hover {
    background-color: #2d2d2d;
    color: white;
  }

  .article-show {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    row-gap: 25px;
    justify-content: center;
    align-items: center;
    background-color: blanchedalmond;
    border-radius: 70px;
    padding: 20px 0;
  }
</style>
{% endblock %}


<div class = "container">
  <div class="article-show">
    <img src="{{ asset('img/article/' ~ article.image) }}" alt="{{ article.name }}" draggable="false">
    <div class="text-container">
      <h1>{{ article.Name }}</h1>
      <h3>Unity Price: {{ article.UnityPrice }} â‚¬</h3>
      <h3>{{ article.Type.name }}</h3>
    </div>
  </div>
  <div class="form-container">
    {{ form_start(articleInListForm) }}
      {{ form_row(articleInListForm.name) }}
      {{ form_row(articleInListForm.brand) }}
      {{ form_row(articleInListForm.unityPrice) }}
      {{ form_row(articleInListForm.quantity) }}
      {{ form_row(articleInListForm.idShoppingList) }}
      {{ form_row(articleInListForm.submit) }}
    {{ form_end(articleInListForm) }}
  </div>
</div>
{{ include ('footer.html.twig') }}
{%endblock%}


