{% extends 'base.html.twig' %}

{%block title%}Articles{%endblock%}

{%block body%}
{% block stylesheet %}
  <style>
    .img-container img {
      width : 50px;
      height : 50px;
      object-fit : cover;
      border-radius : 10px;
      transform : translateX(20px);
    }

    .table td {
      vertical-align : middle;
    }

    .table th, .table td {
      padding : 1.1rem;
    }
  </style>
{% endblock stylesheet%}
<main>
  <h1>Articles ({{ articles|length }})</h1>
</main>
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Unity Price</th>
        <th scope="col">Type</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
{%  for article in articles %}
    {% set i = (i + 1) % classesTable|length  %}
    {% set classTable = classesTable[i] %}
    {% set classButton = classesButtons[i] %}
      <tr class="{{classTable}}">
        <th scope="row" class="img-container">
            <img src="{{ asset('img/article/' ~ article.image) }}" alt="{{ article.name }}" width="100" height="100" draggable="false">
        </th>
        <td>{{ article.name }}</td>
        <td>{{ article.unityPrice }} â‚¬</td>
        <td>{{ article.type.name }}</td>
        <td>
            <a class="btn {{ classButton }}" href="{{ path('article_show', { 'id' : article.id} ) }}">View</a>
        </td>
      </tr> 
{% endfor %}
    </tbody>
</table>

{{ include ('footer.html.twig') }}
{% endblock body %}