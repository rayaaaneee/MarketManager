{% extends 'base.html.twig' %}
{% block title %}Connection{% endblock %}

{% block stylesheets %}
<style>
    .form-control {
        margin-left: 15px;
    }
    .btn {
        display: block;
    }
    form {
        display: flex;
        flex-direction: column;
        row-gap: 15px;
        width: 350px;
    }

    main {
        height: 62vh;
    }

    form button[type="submit"] {
        align-self: center;
        justify-self: center;
        width: fit-content;
        padding: 13px 25px;
    }
    form > div {
        display: flex;
        flex-direction: column;
        row-gap: 5px;
    }

    form > h1 {
        align-self: center;
    }
</style>
{% endblock %}

{% block body %}
<main>
    {{ form_start(connectionForm) }}
        <h1>Connection</h1>
        {{ form_row(connectionForm.Surname) }}

        {{ form_row(connectionForm.Password) }}
        <button type="submit" class="btn btn-primary">Sign In</button>
    {{ form_end(connectionForm) }}
</main>

{{ include ('footer.html.twig') }}
{% endblock %}
