{% extends 'base.html.twig' %}

{% block title %}Shopping lists{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/list.css') }}">
{% endblock %}

{% block body %}
    {% if shopping_lists is empty %}
        {% set title = 'No shopping lists' %}
    {% else %}
        {% set title = 'My shopping lists ('~ shopping_lists|length ~')' %}
    {% endif %}
    {{ include('title.page.html.twig', {'title': title, 'file' : 'bulleted-list.png'}) }}

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Shopping date</th>
                <th>Number of articles</th>
                <th>Total price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopping_list in shopping_lists %}
            <tr>
                <td>
                    {% if shopping_list.name|length > 25 %}
                      {{ shopping_list.name|slice(0, 25) ~ '...' }}
                    {% else %}
                      {{ shopping_list.name }}
                    {% endif %}
                </td>
                <td>
                    {% if shopping_list.description is not null %}
                        {% if shopping_list.description|length > 25 %}
                          {{ shopping_list.description|slice(0, 25) ~ '...' }}
                        {% else %}
                          {{ shopping_list.description }}
                        {% endif %}
                    {% else %}
                        No description
                    {% endif %}
                </td>
                <td>
                {% if shopping_list.endDate is not null %}
                    {{ shopping_list.endDate|date('d/m/Y') }}
                {% else %}
                    Not set
                {% endif %}
                </td>
                <td>{{ shopping_list.nbArticles }}</td>
                <td>{{ shopping_list.totalPrice }} â‚¬</td>
                <td>
                    <a href="{{ path('list_edit', {'id': shopping_list.id}) }}" class="btn btn-light">edit</a>
                    <a href="{{ path('list_show', {'id': shopping_list.id}) }}" class="btn btn-dark">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">You have no shopping lists yet.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="create-new-container">
        <a href="{{ path('new_list') }}" class="btn btn-outline-primary">Create new</a>
    </div>
{% endblock %}
